<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
    xmlns="sap.m">
	<!-- <Button core:require="{ handler: 'task/ext/fragment/Create'}" text="Edit" press="handler.onPress" /> -->
    <Dialog id="_IDDialog"
        title="college Details"
        class="sapUiResponsiveContentPadding"
        >
        <content>
         <Input id="idInput" placeholder="Enter CID" />
        <Input id="nameInput" placeholder="Enter Name" />
    <!-- <Button text="Upload" press=".onUploadPressed" /> -->
        </content>
        <beginButton>
            <Button id="ok"
                core:require="{ handler: 'task/ext/fragment/Create'}"
                text="OK"
                press="handler.handleClose"
                type="Emphasized"
                enabled="true" /> 
        </beginButton>
        <endButton>
            <Button id="cancel"
            core:require="{ handler: 'task/ext/fragment/Create'}"
                text="Cancel"
                press="handler.cancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>